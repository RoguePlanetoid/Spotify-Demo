@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<div class="container">
    <div class="row">
        <div class="col-sm">
            <table class="table table-borderless table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th colspan="2">New Releases</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.NewReleases.albums.items)
                    {
                        <tr>
                            <td>
                                <img src="@item?.images[0]?.url" height="64" width="64" />
                            </td>
                            <td class="text-left">
                                <a href="@item.external_urls.spotify">
                                    @item.name
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="col-sm">
            <table class="table table-borderless table-striped">
                <thead class="thead-dark">
                    <tr>
                        <th colspan="2">Followed Artists</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.FollowedArtists.artists.items)
                    {
                        <tr>
                            <td>
                                <img src="@item?.images[0]?.url" height="64" width="64" />
                            </td>
                            <td>
                                <a href="@item.external_urls.spotify">
                                    @item.name
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>